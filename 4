#include <stdio.h>



calcularAreaVolumeEsfera(float raio, float *area, float *volume) {
    *area = 4 * PI * raio * raio;
    *volume = (4.0 / 3) * PI * raio * raio * raio;
}

int main() {
    float raio, area, volume;

   
    printf("Digite o raio da esfera: ");
    scanf("%f", &raio);


    calcularAreaVolumeEsfera(raio, &area, &volume);
    printf("Area da superficie: %.2f\n", area);
    printf("Volume: %.2f\n", volume);

    return 0;
}
